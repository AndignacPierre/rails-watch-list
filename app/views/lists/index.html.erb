<form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get">
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-primary purple">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
</form>

<div class="container">
  <div>
    <%= cl_image_tag "edoj5dzvfyxjhisa5dvu",width: "100%" %>
  </div>

  <div class="cards-container">
      <% @lists.each do |list| %>
        <div class="cards">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg); width:30%, height: 100px">
              <%= link_to list.name, list_path(list) %>
          </div>
        </div>
      <% end %>
</div>
